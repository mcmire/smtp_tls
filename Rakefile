begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "smtp_tls"
    gemspec.summary = "Provides SMTP STARTTLS support for Ruby 1.8.6 (built-in for 1.8.7+)"
    gemspec.description = "Provides SMTP STARTTLS support for Ruby 1.8.6 (built-in for 1.8.7+).  Simply
    require 'smtp_tls' and use the Net::SMTP#enable_starttls method to talk to
    servers that use STARTTLS."
    gemspec.email = "drbrain@segment7.net"
    gemspec.homepage = "http://github.com/seattlerb/smtp_tls"
    gemspec.authors = ["Eric Hodel", "Kyle Maxwell"]
    gemspec.required_ruby_version = '~> 1.8.6.0'
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end